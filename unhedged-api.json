                "required": [
                  "marketId",
                  "outcomeIndex",
                  "amount"
                ]
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bet": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "marketId": {
                          "type": "string"
                        },
                        "outcomeIndex": {
                          "type": "number"
                        },
                        "amount": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string"
                        },
                        "timeWeight": {
                          "type": "string"
                        }
                      }
                    },
                    "balanceAfter": {
                      "type": "string",
                      "description": "Available balance after bet"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
