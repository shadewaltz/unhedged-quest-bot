          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "markets": {
                      "type": "array"
                    },
                    "total": {
                      "type": "number"
                    },
                    "activeCount": {
                      "type": "number"
                    },
                    "endedCount": {
                      "type": "number"
                    },
                    "resolvedCount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
