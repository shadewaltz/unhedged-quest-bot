    "/api/v1/balance/withdraw": {
      "post": {
        "summary": "Request withdrawal to Canton wallet",
        "tags": [
          "balance"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number",
                    "minimum": 0.0001,
                    "maximum": 100000
                  },
                  "destinationPartyId": {
                    "type": "string",
                    "pattern": "^.+::.+$"
                  }
                },
                "required": [
                  "amount"
                ]
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Default Response",
