      "get": {
        "summary": "List prediction markets",
        "tags": [
          "markets"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "enum": [
                "ACTIVE",
                "ENDED",
                "RESOLVED",
                "VOIDED"
